{
  "name": "@vlayer/sdk",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./web_proof": {
      "import": "./dist/api/webProof/index.js",
      "types": "./dist/api/webProof/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./prover": {
      "import": "./dist/api/prover/index.js",
      "types": "./dist/api/prover/index.d.ts"
    }
  },
  "version": "1.2.0",
  "scripts": {
    "build": "bun tsc --project tsconfig.build.json && bun tsc-alias",
    "test:unit": "vitest --run",
    "gen:types": "sh ../../bash/build-ts-types.sh",
    "replaceCommonsSymlink": "mv ./src/web-proof-commons ./src/web-proof-commons.bak && cp -r $(readlink -f ./src/web-proof-commons.bak) src/web-proof-commons && rm ./src/web-proof-commons.bak"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/bun": "latest",
    "@types/semver": "^7.5.8",
    "abitype": "^1.0.6",
    "vitest": "^2.1.1",
    "vitest-fetch-mock": "^0.4.1",
    "vite": "^5.4.1"
  },
  "peerDependencies": {
    "typescript": "^5.6.3",
    "@vlayer/sdk": "1.2.0"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "base64-js": "^1.5.1",
    "debug": "^4.4.0",
    "dotenv": "^16.0.0",
    "dotenv-flow": "^4.1.0",
    "http-status-codes": "^2.3.0",
    "postal-mime": "^2.3.2",
    "semver": "^7.6.3",
    "ts-pattern": "5.6.0",
    "tsc-alias": "^1.8.10",
    "url-regex": "^5.0.0",
    "urlpattern-polyfill": "^10.0.0",
    "viem": "2.27.0",
    "vite-tsconfig-paths": "^5.0.1",
    "zod": "^3.24.1"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md"
  ],
  "overrides": {
    "viem": "2.27.0"
  }
}
